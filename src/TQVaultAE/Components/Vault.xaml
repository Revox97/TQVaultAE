<UserControl x:Class="TQVaultAE.Components.Vault"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TQVaultAE.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE;component/Components/Templates/ButtonTemplate.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE;component/Components/Templates/ToggleButtonTemplate.xaml"/>
                <ResourceDictionary>
                    <Style x:Key="RotatedAutoSortButton" TargetType="{x:Type Button}">
                        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/rotatedautosortup01.png" TileMode="None" AlignmentX="Right" AlignmentY="Top" Stretch="Uniform"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/rotatedautosortover01.png" TileMode="None" AlignmentX="Right" AlignmentY="Top" Stretch="Uniform"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="VaultTabToggleButton" TargetType="{x:Type ToggleButton}">
                        <Setter Property="Template" Value="{StaticResource ToggleButtonTemplate}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/inventorybagdown01.png" 
                                            TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="Fill"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/inventorybagup01.png" 
                                                    TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="Fill"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/inventorybagover01.png" 
                                                        TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="Fill"/>
                                        </Setter.Value>
                                    </Setter>
                                </MultiTrigger.Setters>
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="Container" Loaded="Container_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height=".075*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Style="{StaticResource RotatedAutoSortButton}" Grid.Column="0" Grid.Row="1"/>
        <Grid Grid.Column="1" Grid.Row="0" x:Name="TabContainer">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="0" IsChecked="True"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="1"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="2"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="3"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="4"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="5"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="6"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="7"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="8"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="9"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="10"/>
            <ToggleButton Checked="Bag_Checked" Unchecked="Bag_Unchecked" Style="{StaticResource VaultTabToggleButton}" Grid.Column="11"/>
        </Grid>
    </Grid>
</UserControl>
