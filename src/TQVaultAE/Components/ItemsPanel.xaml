<UserControl x:Class="TQVaultAE.Components.ItemsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TQVaultAE.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="ItemSlot" TargetType="Border">
                <!-- Replace with item slot background image -->
                <Setter Property="Background" Value="Green"/>
                <Setter Property="BorderBrush" Value="Black" />
                <Setter Property="BorderThickness" Value="1"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="ItemsPanelContent"></Grid>
</UserControl>
