<UserControl x:Class="TQVaultAE.Components.ItemsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TQVaultAE.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Style x:Key="ItemSlot" TargetType="Border">
                        <!-- Replace with item slot background image -->
                        <Setter Property="Background" Value="#2A2222"/>
                        <Setter Property="BorderBrush" Value="#dddddd"/>
                        <Setter Property="BorderThickness" Value=".2"/>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border BorderBrush="Gold" x:Name="ItemsPanelBorder" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid>
            <Grid Grid.Row="0" Grid.Column="0" x:Name="BackgroundContainer"></Grid>
            <Grid Grid.Row="0" Grid.Column="0" x:Name="ItemsPanelContent"></Grid>
        </Grid>
    </Border>
</UserControl>
