<UserControl x:Class="TQVaultAE.Components.ItemsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TQVaultAE.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Style x:Key="ItemSlot" TargetType="Border">
                        <!-- Replace with item slot background image -->
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/StashTabUp.png" 
                                            TileMode="None" Stretch="Uniform" AlignmentX="Center" AlignmentY="Center"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border BorderBrush="Gold" BorderThickness="2 0 0 0">
        <Grid x:Name="ItemsPanelContent"></Grid>
    </Border>
</UserControl>
