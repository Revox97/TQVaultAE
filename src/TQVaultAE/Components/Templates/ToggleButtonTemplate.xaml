<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    x:Class="TQVaultAE.Components.Templates.ToggleButton">
    <ControlTemplate TargetType="ToggleButton" x:Key="ToggleButtonTemplate">
        <ControlTemplate.Resources>
            <ResourceDictionary>
                <Style x:Key="Border" TargetType="{x:Type Border}">
                    <Setter Property="BorderThickness" Value="0" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ResourceDictionary>
        </ControlTemplate.Resources>
        <Border Background="{TemplateBinding Background}" BorderThickness="0" Style="{StaticResource Border}">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </ControlTemplate>
</ResourceDictionary>