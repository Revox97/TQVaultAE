<UserControl x:Class="TQVaultAE.Components.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TQVaultAE.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE;component/Components/Templates/ToggleButtonTemplate.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE;component/Components/Templates/ButtonTemplate.xaml"/>
                <ResourceDictionary>
                    <Style x:Key="AutoSortButton" TargetType="Button">
                        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/autosortup01.png"
                                            TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="UniformToFill"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/autosortover01.png"
                                                    TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="UniformToFill"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="VaultTabToggleButton" TargetType="{x:Type ToggleButton}">
                        <Setter Property="Template" Value="{StaticResource ToggleButtonTemplate}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/inventorybagdown01.png" 
                                            TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="Fill"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/inventorybagup01.png" 
                                                    TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="Fill"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE;component/Resources/Img/inventorybagover01.png" 
                                                    TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="Fill"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary> 
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="PlayerInventory" Loaded="PlayerInventory_Loaded">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" BorderBrush="Gold" BorderThickness="0 0 0 1">
                    <Button Style="{StaticResource AutoSortButton}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="90" x:Name="MainAutoSort"/>
                </Border>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="0" x:Name="AdditionalSackTabs">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ToggleButton Grid.Column="0" VerticalAlignment="Bottom" Checked="PlayerSack_Checked" x:Name="PlayerSackOne" Style="{StaticResource VaultTabToggleButton}" IsChecked="True"/>
                <ToggleButton Grid.Column="1" VerticalAlignment="Bottom" Checked="PlayerSack_Checked" x:Name="PlayerSackTwo" Style="{StaticResource VaultTabToggleButton}"/>
                <ToggleButton Grid.Column="2" VerticalAlignment="Bottom" Checked="PlayerSack_Checked" x:Name="PlayerSackThree" Style="{StaticResource VaultTabToggleButton}"/>
                <Border Grid.Column="3" BorderBrush="Gold" BorderThickness="0 0 0 1">
                    <Button Style="{StaticResource AutoSortButton}" Grid.Column="4" x:Name="AdditionalAutoSort" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" x:Name="PlayerStash">
            <TabControl Background="Transparent" BorderBrush="Gold" BorderThickness="2">
                <TabItem Header="Equipment">
                    
                </TabItem>
                <TabItem Header="Storage Area">
                    
                </TabItem>
                <TabItem Header="Transfer Area">
                    
                </TabItem>
                <TabItem Header="Relic Vault">
                    
                </TabItem>
                
            </TabControl>
            
        </Grid>
    </Grid>
</UserControl>
