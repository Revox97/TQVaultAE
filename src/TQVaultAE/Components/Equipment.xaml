<UserControl x:Class="TQVaultAE.Components.Equipment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TQVaultAE.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="EquipmentBackground" TargetType="{x:Type Image}">
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="Stretch" Value="Uniform"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" x:Name="EquipmentBackground" Style="{StaticResource EquipmentBackground}" Source="pack://application:,,,/TQVaultAE;component/Resources/Img/EquipmentBackground.png"/>
        <Grid Grid.Column="0" x:Name="ItemsContainer" Width="{Binding ElementName=EquipmentBackground, Path=ActualWidth}" Height="{Binding ElementName=EquipmentBackground, Path=ActualHeight}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".35*"/>
                <ColumnDefinition Width=".94*"/>
                <ColumnDefinition Width=".29*"/>
                <ColumnDefinition Width=".84*"/>
                <ColumnDefinition Width=".02*"/>
                <ColumnDefinition Width=".29*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
        <Image Grid.Column="0" Style="{StaticResource EquipmentBackground}" Source="pack://application:,,,/TQVaultAE;component/Resources/Img/EquipmentOverlay.png"/>
    </Grid>
</UserControl>
