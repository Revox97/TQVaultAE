<Window x:Class="TQVaultAE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TQVaultAE" xmlns:models="clr-namespace:TQVaultAE.Models"
        xmlns:pages="clr-namespace:TQVaultAE.UI.Pages;assembly=TQVaultAE.UI"
        mc:Ignorable="d"
        Title="TQVaultAE" MinHeight="800" MinWidth="1300" Height="900" Width="1100" 
        WindowStyle="None" ResizeMode="CanResizeWithGrip" AllowsTransparency="True" WindowStartupLocation="CenterScreen" SizeChanged="Window_SizeChanged">
    <Window.DataContext>
        <models:MainWindowModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE.UI;component/Templates/ButtonTemplate.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE.UI;component/Templates/ToggleButtonTemplate.xaml"/>
                <ResourceDictionary>
                    <Style x:Key="MainToggleButton" TargetType="{x:Type ToggleButton}">
                        <Setter Property="Template" Value="{StaticResource ToggleButtonTemplate}"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <Setter Property="Width" Value="150"/>
                        <Setter Property="Margin" Value="2.5 4"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_main_up.jpg" Stretch="UniformToFill" TileMode="None" AlignmentX="Center" AlignmentY="Center"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_main_over.jpg" Stretch="UniformToFill" TileMode="None" AlignmentX="Center" AlignmentY="Center"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_main_down.jpg" Stretch="UniformToFill" TileMode="None" AlignmentX="Center" AlignmentY="Center"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="MainButton" TargetType="{x:Type Button}">
                        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <Setter Property="Width" Value="150"/>
                        <Setter Property="Margin" Value="2.5 4"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_main_up.jpg" Stretch="UniformToFill" TileMode="None" AlignmentX="Center" AlignmentY="Center"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_main_over.jpg" Stretch="UniformToFill" TileMode="None" AlignmentX="Center" AlignmentY="Center"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="ButtonClose" TargetType="{x:Type Button}">
                        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_close_up.png"
                                            TileMode="None" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_close_over.png"
                                                    TileMode="None" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="ButtonMinimize" TargetType="{x:Type Button}">
                        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_minimize_up.png"
                                            TileMode="None" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_minimize_over.png"
                                                    TileMode="None" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="ButtonMaximize" TargetType="{x:Type Button}">
                        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_maximize_up.png"
                                            TileMode="None" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_maximize_over.png"
                                                    TileMode="None" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="BorderTop" TargetType="{x:Type Grid}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="0">
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/mainwindow_background.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="11"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="27"/>
            <RowDefinition Height="4"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="4"/>
        </Grid.ColumnDefinitions>

        <!-- Content -->
        <DockPanel Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3" x:Name="ToolBar" Background="#362121" LastChildFill="False">
            <ToggleButton DockPanel.Dock="Left" Content="Vault" Style="{StaticResource MainToggleButton}" Margin="15 4 2.5 4" x:Name="ButtonVault" Checked="ButtonVault_Checked"/>
            <ToggleButton DockPanel.Dock="Left" Content="Search" Style="{StaticResource MainToggleButton}" x:Name="ButtonSearch" Checked="ButtonSearch_Checked"/>
            <ToggleButton DockPanel.Dock="Left" Content="Configuration" Style="{StaticResource MainToggleButton}" x:Name="ButtonConfiguration" Checked="ButtonConfiguration_Checked"/>
            <Button DockPanel.Dock="Left" Content="Save" Style="{StaticResource MainButton}"/>
            <StackPanel Orientation="Horizontal" Margin="0 0 30 0" DockPanel.Dock="Right">
                <Image Source="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/icon_majestic_chest.png" Margin="-5"></Image>
                <Label VerticalAlignment="Center" Content="TQVault" FontSize="28" FontWeight="DemiBold" Foreground="Gold" VerticalContentAlignment="Center" Margin="0 -5 0 0" ></Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0 0 10 0">
                <Label Content="Search Bar moves here with new lupen icon" Foreground="White" VerticalContentAlignment="Center" FontSize="16"/>
            </StackPanel>
        </DockPanel>

        <Frame Loaded="ContentController_Loaded" Name="ContentController" NavigationUIVisibility="Hidden" Grid.Row="3" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3"/>

        <!-- Border top -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" x:Name="BorderTop" Style="{StaticResource BorderTop}" MouseDown="BorderTop_MouseDown">
            <Grid.RowDefinitions>
                <RowDefinition Height="1"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="1"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="31"/>
            </Grid.ColumnDefinitions>
            <!-- Border upper left corner -->
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/window_border_corner_top_left.png"
                                Stretch="UniformToFill" AlignmentX="Left" AlignmentY="Top" TileMode="None"/>
                </Grid.Background>
            </Grid>
            <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/window_border_top_left.png"
                                Stretch="Fill" AlignmentX="Left" AlignmentY="Center" TileMode="Tile"/>
                </Grid.Background>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/window_border_top_center.png"
                                Stretch="Fill" AlignmentX="Center" AlignmentY="Center" TileMode="None"/>
                </Grid.Background>
                <Label Content="TQVaultAE 5.0.0.0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Padding="7 0 7 2"
                       HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="19" FontSize="9"/>
            </Grid>
            <Grid Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="1">
                <Grid.Background>
                    <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/window_border_top_right.png"
                                Stretch="Fill" AlignmentX="Right" AlignmentY="Center" TileMode="Tile"/>
                </Grid.Background>
            </Grid>
            <Grid Grid.Column="3" Grid.Row="1" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="4"/>
                </Grid.ColumnDefinitions>
                <Button Margin="1" Grid.Column="0" HorizontalAlignment="Stretch" Style="{StaticResource ButtonMinimize}" x:Name="ButtonMinimize" Click="ButtonMinimize_Click"/>
                <Button Margin="1" Grid.Column="2" HorizontalAlignment="Stretch" Style="{StaticResource ButtonMaximize}" x:Name="ButtonMaximize" Click="ButtonMaximize_Click"/>
            </Grid>
        </Grid>

        <!-- Buttons-->
        <Button Margin="0 2 0 0" Grid.Row="0" Grid.RowSpan="2" Grid.Column="3" Grid.ColumnSpan="2" x:Name="ButtonClose" Style="{StaticResource ButtonClose}" Click="ButtonExit_Click">
        </Button>
        <!-- Border left -->
        <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="0">
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/window_border_side.png"
                            Stretch="UniformToFill" AlignmentX="Left" AlignmentY="Top" TileMode="None" />
            </Grid.Background>
        </Grid>
        <!-- Border right -->
        <Grid Grid.Row="2" Grid.RowSpan="2" Grid.Column="4">
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/window_border_side.png"
                            Stretch="UniformToFill" AlignmentX="Right" AlignmentY="Top" TileMode="None" />
            </Grid.Background>
        </Grid>
        <!-- Border bottom -->
        <Grid Grid.Row="4" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/window_border_corner_bottom_left.png"
                            Stretch="UniformToFill" AlignmentX="Left" AlignmentY="Bottom" TileMode="None"/>
            </Grid.Background>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="2">
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/window_border_bottom.png"
                            Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Bottom" TileMode="None"/>
            </Grid.Background>
        </Grid>
        <Grid Grid.Row="4" Grid.RowSpan="2" Grid.Column="3" Grid.ColumnSpan="2">
            <Grid.Background>
                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/window_border_corner_bottom_right.png"
                            Stretch="UniformToFill" AlignmentX="Right" AlignmentY="Bottom" TileMode="None"/>
            </Grid.Background>
        </Grid>
    </Grid>
</Window>
