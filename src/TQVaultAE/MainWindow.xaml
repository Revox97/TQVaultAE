<Window x:Class="TQVaultAE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TQVaultAE" xmlns:models="clr-namespace:TQVaultAE.Models"
        mc:Ignorable="d"
        d:DataContext="{d:DesignData models.MainWindowModel}"
        Title="TQVaultAE" MinHeight="400" MinWidth="600" Height="700" Width="1200" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <GroupBox Header="{Binding Title, FallbackValue=TQVaultAE 5.0.0.0}" x:Name="WindowHeaderContainer">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <DockPanel Grid.Row="0" x:Name="ToolBar" Background="Blue" LastChildFill="False">
                    <Button DockPanel.Dock="Left" Content="Configure"></Button>
                    <Button DockPanel.Dock="Left" Content="Show Vault"></Button>
                    <Button DockPanel.Dock="Left" Content="Search"></Button>
                    <Button DockPanel.Dock="Left" Content="Save"></Button>
                    <Button DockPanel.Dock="Left" Content="Exit"></Button>
                    <Label DockPanel.Dock="Right" VerticalAlignment="Center" Foreground="White" Content="Logo Placeholder"></Label>
                </DockPanel>
                <Grid Grid.Row="1" x:Name="MainContent" Background="red">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" x:Name="VaultPanel" Background="Green">
                        
                    </Grid>
                    <Grid Grid.Column="1" x:Name="PlayerPanel" Background="Yellow">
                        
                    </Grid>
                </Grid>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
