<UserControl x:Class="TQVaultAE.UI.Components.Player"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TQVaultAE.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE.UI;component/Templates/ToggleButtonTemplate.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE.UI;component/Templates/ButtonTemplate.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE.UI;component/Templates/TabItemTemplate.xaml"/>
                <ResourceDictionary>
                    <Style x:Key="AutoSortButton" TargetType="Button">
                        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_autosort_up.png"
                                            TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="UniformToFill"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_autosort_over.png"
                                                    TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="UniformToFill"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="VaultTabToggleButton" TargetType="{x:Type ToggleButton}">
                        <Setter Property="Template" Value="{StaticResource ToggleButtonTemplate}"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_inventorybag_down.png" 
                                            TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="Fill"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_inventorybag_up.png" 
                                                    TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="Fill"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <MultiTrigger.Setters>
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_inventorybag_over.png" 
                                                        TileMode="None" AlignmentX="Center" AlignmentY="Center" Stretch="Fill"/>
                                        </Setter.Value>
                                    </Setter>
                                </MultiTrigger.Setters>
                            </MultiTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="StashTabControl" TargetType="TabControl">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="15"/>
                        <!-- TODO split this up in four images to remain same size -->
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/caravan_background.jpg" 
                                            TileMode="None" AlignmentX="Left" AlignmentY="Center" Stretch="Fill"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <Style x:Key="TabItem" TargetType="TabItem">
                        <Setter Property="Template" Value="{StaticResource TabItemTemplate}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                </ResourceDictionary> 
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="PlayerContainer">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid x:Name="PlayerInventory">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width=".5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" BorderBrush="Gold" BorderThickness="0 0 0 2">
                    <Button Style="{StaticResource AutoSortButton}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="90" x:Name="MainAutoSort"/>
                </Border>
            </Grid>
            <Grid Grid.Column="2" Grid.Row="0" x:Name="AdditionalSackTabs">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ToggleButton Grid.Column="0" x:Uid="0" VerticalAlignment="Bottom" Checked="PlayerSack_Checked" Unchecked="PlayerSack_Unchecked"
                              x:Name="PlayerSackOne" Style="{StaticResource VaultTabToggleButton}" IsChecked="True"/>
                <ToggleButton Grid.Column="1" x:Uid="1" VerticalAlignment="Bottom" Checked="PlayerSack_Checked" Unchecked="PlayerSack_Unchecked"
                              x:Name="PlayerSackTwo" Style="{StaticResource VaultTabToggleButton}"/>
                <ToggleButton Grid.Column="2" x:Uid="2" VerticalAlignment="Bottom" Checked="PlayerSack_Checked" Unchecked="PlayerSack_Unchecked"
                              x:Name="PlayerSackThree" Style="{StaticResource VaultTabToggleButton}"/>
                <Border Grid.Column="3" BorderBrush="Gold" BorderThickness="0 0 0 2">
                    <Button Style="{StaticResource AutoSortButton}" Grid.Column="4" x:Name="AdditionalAutoSort"
                            VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                </Border>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" x:Name="PlayerStash">
        <!-- TODO change background, so we have no ugly black screen -->
            <TabControl HorizontalAlignment="Left" Style="{StaticResource StashTabControl}">
                <TabItem Header="Equipment" Style="{StaticResource TabItem}" x:Name="Equipment">
                    <Grid x:Name="EquipmentContainer" Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width=".4*"/>
                        </Grid.ColumnDefinitions>
                        <local:Equipment Grid.Column="0"/>
                        <local:PlayerStatistics Grid.Column="1"/>
                    </Grid>
                </TabItem>
                <TabItem x:Name="TabStorageArea" Header="Storage" Style="{StaticResource TabItem}"/>
                <TabItem x:Name="TabTransferArea" Header="Transfer" Style="{StaticResource TabItem}"/>
                <TabItem x:Name="TabRelicVault" Header="Relics" Style="{StaticResource TabItem}"/>
            </TabControl>
        </Grid>
    </Grid>
</UserControl>
