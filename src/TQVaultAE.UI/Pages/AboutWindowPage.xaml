<Page x:Class="TQVaultAE.UI.Pages.AboutWindowPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TQVaultAE.UI.Pages"
      mc:Ignorable="d" 
      Background="#362121"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutWindowPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/TQVaultAE.UI;component/Templates/ButtonTemplate.xaml"/>
                <ResourceDictionary>
                    <Style x:Key="AboutText" TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="TextWrapping" Value="Wrap" />
                    </Style>
                    <Style x:Key="AboutLabel" TargetType="{x:Type Label}">
                        <Setter Property="HorizontalAlignment" Value="Stretch"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                    <Style x:Key="AboutLabelTitle" TargetType="{x:Type Label}" BasedOn="{StaticResource AboutLabel}">
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                    </Style>
                    <Style x:Key="MainButton" TargetType="{x:Type Button}">
                        <Setter Property="Template" Value="{StaticResource ButtonTemplate}"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <Setter Property="Width" Value="120"/>
                        <Setter Property="Margin" Value="0 0 14 0"/>
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_main_up.jpg" Stretch="UniformToFill" TileMode="None" AlignmentX="Center" AlignmentY="Center"/>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush ImageSource="pack://application:,,,/TQVaultAE.UI;component/Resources/Img/button_main_over.jpg" Stretch="UniformToFill" TileMode="None" AlignmentX="Center" AlignmentY="Center"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" Margin="10" BorderBrush="Black" BorderThickness="0">
            <Image Source="/TQVaultAE.UI;component/Resources/Img/about.jpg"/>
        </Border>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <Label Content="TQVaultAE" Style="{StaticResource AboutLabelTitle}"/>
            <!-- TODO Bind actual assembly version -->
            <Label Content="Version 5.0.0.0" Style="{StaticResource AboutLabel}"/>
            <Label Content="Copyright © 2006-2012 by Brandon Wallace" Style="{StaticResource AboutLabel}"/>
            <Label Content="Copyright © 2025 by Leopold Pohlmann" Style="{StaticResource AboutLabel}"/>

        </StackPanel>
        <Border Grid.Column="1" Grid.Row="1" BorderBrush="Black" BorderThickness="2" Margin="4 4 4 10" Padding="4">
            <ScrollViewer Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch">
                <StackPanel VerticalAlignment="Stretch">
                    <TextBlock Style="{StaticResource AboutText}" TextWrapping="Wrap">
                        TQVaultAE by Revox97 (<Hyperlink NavigateUri="mailto:" TargetName="l">TODO: CreateEmail</Hyperlink>)
                        <LineBreak/>
                        <LineBreak/>
                        Contrubutors:
                        <LineBreak/>
                        TODO: Add contributors here
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" Style="{StaticResource MainButton}" Content="OK" Click="ButtonExit_Click"/>
    </Grid>
</Page>
